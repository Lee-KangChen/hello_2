<!-- app/views/pages/math.html.erb -->
<h1>Rand big or small: </h1>
<% if rand > 0.5 %>
<h1>Big!</h1>
<% else %>
<small>Small...</small>
<% end %>

<h1>#each, #times block:</h1>
<ul>
  <% 7.times do |i| %>
    <li><%= i %></li>
  <% end  %>
</ul>

<h1>Lotto:</h1>
<ul>
  <% (1..49).to_a.sample(6).each do |i| %>
    <li>Lotto number: <%= i %></li>
  <% end %>
</ul>
